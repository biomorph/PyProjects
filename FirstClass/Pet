class pet:

    number_of_legs = 0
    number_of_tails = 0

    def sleep(self):
        print 'zzzz'

    def count_legs(self):
        print "I have %s legs" % self.number_of_legs


class dog(pet):
    def bark(self):
        print "Woof"

doug = dog()
doug.bark()
doug.sleep()
doug.number_of_legs = 4
doug.count_legs()

nemo = pet()
print nemo.number_of_tails
